{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "semanticCommits": "enabled",
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchPackagePatterns": [
        "async-graphql"
      ],
      "groupName": "async-graphql",
      "automerge": true,
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "groupName": "tracing",
      "automerge": true,
      "matchPackagePatterns": [
        "^tracing"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "matchPackagePatterns": [
        "anyhow",
        "thiserror"
      ],
      "automerge": true,
      "groupName": "error-handling"
    },
    {
      "groupName": "serde",
      "automerge": true,
      "matchPackagePatterns": [
        "^serde"
      ],
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "groupName": "tokio",
      "automerge": true,
      "matchPackagePatterns": [
        "tokio"
      ],
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "groupName": "futures",
      "automerge": true,
      "matchPackagePatterns": [
        "futures"
      ],
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    }
  ]
}
